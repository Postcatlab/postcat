{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "types": ["node"],
    "lib": ["es2017", "es2016", "es2015", "dom"]
  },
  "include": ["app/**/**.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "app/**/browser/**/*.ts"],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
