{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./src",
    "target": "es6",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "eo/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.d.ts",
    "./src/**/**.ts",
    "./src/**/**.js",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/browser/**/*.js",
    "**/browser/**/*.ts",
    "out"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
