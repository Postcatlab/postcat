{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "esnext",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "eo/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/**.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/browser/**/*.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
